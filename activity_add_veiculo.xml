<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textAddList"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/black"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:lineSpacingExtra="12sp"
        android:text="DADOS DO VEÃCULO"
        android:textColor="#3D5AFE"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/modeloEditText"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="Modelo" />

    <EditText
        android:id="@+id/anoEditText"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="Ano"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/marcaEditText"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:hint="Marca" />

    <EditText
        android:id="@+id/categoriaEditText"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="Categoria (exemplo: carro, moto, caminhonete)" />

    <EditText
        android:id="@+id/quilometragemEditText"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:hint="Quilometragem"
        android:inputType="number" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:backgroundTint="#3D5AFE"
        android:text="Salvar"
        android:textSize="20sp" />

    <View

        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_weight="1"
        android:background="@color/black" />
</LinearLayout>