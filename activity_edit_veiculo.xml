<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textEditList"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/black"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:lineSpacingExtra="12sp"
        android:text="ALTERAR DADOS"
        android:textColor="#3D5AFE"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/modeloEditText"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:hint="Modelo" />

    <EditText
        android:id="@+id/anoEditText"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:hint="Ano"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/marcaEditText"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:hint="Marca " />

    <EditText
        android:id="@+id/quilometragemEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Quilometragem"
        android:inputType="number" />

    <EditText
        android:id="@+id/categoriaEditText"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Categoria (exemplo: carro, moto, caminhonete)" />

    <Button
        android:id="@+id/saveButton"
        android:text="Salvar Veículo"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:backgroundTint="#3D5AFE"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:background="@color/black" />

    <Button
        android:id="@+id/deleteButton"
        android:text="Excluir Veículo"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:textSize="20sp"
        android:backgroundTint="#0408FF"/>

</LinearLayout>